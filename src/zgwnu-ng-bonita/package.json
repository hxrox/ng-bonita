{
  "name": "zgwnu-ng-bonita-src",
  "version": "1.0.0",
  "description": "Source Angular Bonita Rest Api Services by ZGW NU",
  "scripts": {
    "cleanup:dist": "rm -R ../dist",
    "cleanup:ngc": "find . -type f -name '*.ng*.*' -delete",
    "transpile": "ngc",
    "package": "rollup -c",
    "minify": "uglifyjs ../dist/bundles/ng-bonita.umd.js --screw-ie8 --compress --mangle --comments --output ../dist/bundles/ng-bonita.umd.min.js",
    "build": "npm run transpile && npm run package && npm run minify && npm run cleanup:ngc",
    "rebuild": "npm run cleanup:dist && npm run build"
  },
  "author": "Onno Haldar",
  "license": "MIT",
  "dependencies": {
    "@angular/core": "^4.3.6",
    "@angular/common": "^4.3.6",
    "@angular/http": "^4.3.6",
    "@angular/router": "^4.3.6",
    "@angular/platform-browser": "^4.3.6",
    "@zgwnu/common-bonita": "git+https://github.com/zgwnu/common-bonita.git"
  },
  "devDependencies": {
    "@angular/compiler": "^4.3.6",
    "@angular/compiler-cli": "^4.3.6",
    "rollup": "^0.49.2",
    "rollup-plugin-node-resolve": "^3.0.0",
    "rxjs": "^5.4.3",
    "typescript": "^2.5.2",
    "uglify-js": "^3.0.28",
    "zone.js": "^0.8.17"
  }
}
